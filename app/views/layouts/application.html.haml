!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      - if content_for?(:title)
        = content_for(:title)
      - else
        Paycoin Block Explorer
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-20413214-4', 'auto');
      ga('send', 'pageview');

  %body
    .navbar.navbar-default.navbar-fixed-top{:style => "background: none; background-color: #119EC1;"}
      .container
        .navbar-header{:style => "width: 25%;"}
          .navbar-brand
            = link_to image_tag("logo.png", height: '85'), "/"
        .navbar-collapse.collapse{:style => "float: right; width: 75%;"}
          %ul.nav.navbar-nav{:style => "float: left; width: 50%"}
            %li.navbar-btn{:style => "height: 85px; width: 150px;"}
              %span
                = link_to 'Rich List', '/richlist'
            %li.navbar-btn{:style => "height: 80px; width: 150px;"}
          %ul.nav.navbar-nav{:style => "float: right; width: 50%"}
            %li.navbar-btn{:style => "height: 80px; width: 100%;"}
              = form_tag(searches_index_path, :method => "get") do
                = text_field_tag :search, params[:search]

    = yield
