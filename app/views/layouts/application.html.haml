!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      - if content_for?(:title)
        = content_for(:title)
      - else
        Paycoin Block Explorer
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = favicon_link_tag 'favicon.ico'
    = csrf_meta_tags
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-20413214-4', 'auto');
      ga('send', 'pageview');

  %body
    .navbar.navbar-default.navbar-fixed-top{:style => "background: none; background-color: #119EC1;"}
      .navbar-header{:style => "height: 111px; display: flex; align-items: center;"}
        .navbar-brand
          = link_to image_tag("logo.png"), "/"
      .navbar-collapse.collapse
        %ul.nav.navbar-nav
          %li.navbar-btn
            = link_to 'Rich List', '/richlist', {:style=>"color: #ffffff"}
          %li.navbar-btn
        %ul.nav.navbar-nav.search
          %li.search-box
            %div.search-home
              = form_tag(search_path, :method => "get", :enforce_utf8 => false) do
                %div.input-group
                  = text_field_tag :search, params[:search], {:class => 'form-control', :placeholder => 'Block height, block hash or transaction hash...'}
                  = button_tag(:type => 'submit', :class => 'btn btn-default') do
                    %span.glyphicon.glyphicon-search.white
    .container
      = yield
