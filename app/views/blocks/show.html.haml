%div.container.info
  %h1.white Block
  %hr
  %span.breadcrumb= link_to 'Home', root_path
  %span /
  %span.breadcrumb Block: #{@block.height.to_s}

%div.row.container{:style => "margin-top: 15px;"}
  %div.col-lg-5
    %div.panel.clearfix
      %div.panel-body{:style => "padding-left: 50px; padding-right: 50px;"}
        %h1 Block Info
        %hr
        %div.dl-horizontal
          %div
            %dt Height
            %dd
              - if (@block.height - 1 != 0)
                = link_to image_tag("prev-arrow-2.png", height: '13'), (@block.height - 1).to_s
              #{@block.height.to_s}
              - if (@block.height != maxBlocks - 1)
                = link_to image_tag("next-arrow-2.png", height: '13'), (@block.height + 1).to_s
          %div
            %dt Block Time
            %dd
              - t = ActiveSupport::TimeZone["UTC"].parse(@block.blockTime.to_s[0..18])
              = t.to_s
          %div
            %dt Total Output
            %dd
              = totalOut(@block)
              XPY
          %div
            %dt Number of Txs
            %dd #{@block.transactions.length.to_s}
          %div
            %dt Difficulty
            %dd #{@block.difficulty.round(8)}
          %div
            %dt Mint
            %dd #{@block.mint.round(6)}
          %div
            %dt Confirmations
            %dd
              = confirmations(@block)
          %div
            %dt Merkle root
            %dd #{@block.merkleRoot}
          %div
            %dt Previous block hash
            %dd
              - if (@block.height - 1 != 0)
                = link_to @block.previousBlockHash, (@block.height - 1).to_s
              - else
                #{''}
          %div
            %dt Next block hash
            %dd
              - if (@block.nextBlockHash != nil)
                = link_to @block.nextBlockHash, (@block.height + 1).to_s
              - else
                #{''}
          %div
            %dt Size
            %dd #{(@block.blockSize.round(4) / 1000)} KB

          %div
            %dt Flags
            %dd #{@block.flags}

  %div.col-lg-7
    %div
      %h1.white Transactions
      %hr
      - @block.transactions.each do |tx|
        %div.panel.clearfix
          %div.panel-body
            Test Transaction